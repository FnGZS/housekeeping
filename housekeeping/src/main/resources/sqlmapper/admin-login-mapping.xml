<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.housekeeping.dao.user.AdminDao">
  <resultMap id="adminMap" type="com.housekeeping.dao.user.dataobject.AdminDO" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="admin_user" property="adminUser" jdbcType="BIGINT" />
    <result column="admin_name" property="adminName" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
  </resultMap>
   <select id="getAdmin" resultMap="adminMap" parameterType="java.lang.Long">
  	select 
  	admin_user,admin_name,password
  	from admin_login
  	where admin_user = #{adminUser,jdbcType=BIGINT}
  	limit 1
  </select>
</mapper>