<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.houseWork.mapper.user.UserDao">
    <insert id="insert" parameterType="com.houseWork.entity.User">
        INSERT INTO user(open_id,username,password,telephone,role,image)
		VALUES
			(#{openId},#{username},#{password},#{telephone},#{role},#{image});
    </insert>

    <select id="findByName" resultType="com.houseWork.entity.User" parameterType="java.lang.String">
        select
        id, username, password
        from userinfo
        where username = #{username,jdbcType=VARCHAR}
    </select>

    <update id="update">
        UPDATE admin_login
        <set>
            gmt_created = now()
        </set>
        <where>
            id = 1
        </where>
    </update>
</mapper>